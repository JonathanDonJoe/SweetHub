<% include head %>

<section>
  
  <div class="myownclass">
      <h1 class="display-4">Dashboard</h1>
      <p class="lead-text">Welcome to your dashboard, update your profile, create an event, and/or make a group!</p>
      <p class="dash-buttons">
        <a class="btn btn-primary btn-lg" href="/update-profile" role="button">Update Profile</a>
        <a class="btn btn-primary btn-lg" href="/events/event-signup" role="button">Create Event</a>
        <!-- <hr class="my-4"> -->
        <div class="list-group">
          <a href="#" class="list-group-item list-group-item-action active disabled">
            Your Events
          </a>
          <% myEvents.forEach( event => { %>
            <a href="/events/<%= event.id%>" class="list-group-item list-group-item-action"><%= event.name %></a>
          <% }) %>
        </div>
  
      </p>
    </div>
</section>

<% include footer %>